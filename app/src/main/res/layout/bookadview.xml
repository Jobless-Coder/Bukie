<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:foreground="@drawable/ripplebg"
    android:clickable="true"
    android:id="@+id/selectad"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="6dp"
    android:layout_marginBottom="5dp"
    android:layout_height="150dp">
    <com.facebook.shimmer.ShimmerFrameLayout android:layout_height="fill_parent"
        android:id="@+id/shimmerlayout"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout

        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:minHeight="100dp"
            android:background="@color/grey"
            android:id="@+id/bookpic"
            android:layout_gravity="center"

            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:background="@color/grey"
                android:minWidth="200dp"
                android:id="@+id/booktitle"
                android:textSize="14sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/grey"
                android:minWidth="150dp"
                android:id="@+id/bookcategory"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/grey"
                android:minWidth="100dp"
                android:id="@+id/bookprice"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/violet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/grey"
                android:minWidth="50dp"
                android:id="@+id/bookdate"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:textSize="8sp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</android.support.v7.widget.CardView>




