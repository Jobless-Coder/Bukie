<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dayll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/view_date"></include>
    </LinearLayout>
<RelativeLayout
    android:foreground="@drawable/ripple_white"
    android:clickable="true"
    android:id="@+id/rellayoutfather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rellayoutson1"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_bubbles1"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llx"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:visibility="visible"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_body1"
                    android:textColor="#ffffff"
                    android:minWidth="95dp"
                    android:textSize="16sp"
                    emojicon:emojiconSize="22sp"
                    />
                <!--
                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:visibility="visible"
                android:paddingBottom="20dp"
