<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".auth.AuthActivity">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/loginscreen"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:onClick="translate"
            android:id="@+id/hello"
            android:textColor="@color/violet"
            android:layout_gravity="bottom"
            android:text="Sign in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/violet"
            android:onClick="translate"
            android:id="@+id/bye"
            android:layout_gravity="bottom"
            android:text="Sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:id="@+id/loginparent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/loginflow"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout

                    android:textColorHint="@color/violet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/violet"
                    >

                    <EditText
                        android:id="@+id/loginemail"
                        android:textColorHint="@color/violet"
                        android:textColor="@color/violet"
                        android:backgroundTint="@color/violet"
                        android:ems="10"
                        android:hint="Enter email"
                        android:inputType="textWebEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout

                    android:textColorHint="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/violet"
                    app:passwordToggleTint="@color/violet"

                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/loginpass"
                        android:textColor="@color/violet"
                        android:backgroundTint="@color/violet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter password"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/forgotpass"
                    android:clickable="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_violet"
                    android:text="Forgot password?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:id="@+id/signinbtn"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Sign in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/signup"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:backgroundTint="@color/black"
                    android:textColorHint="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/violet"
                    >

                <EditText
                    android:textColorHint="@color/violet"
                    android:textColor="@color/violet"
                    android:backgroundTint="@color/violet"
                    android:ems="10"
                    android:id="@+id/regemail"
                    android:hint="Enter email"
                    android:inputType="textWebEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout

                    android:textColorHint="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/violet"
                    app:passwordToggleTint="@color/violet"

                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/regpass"
                        android:textColor="@color/violet"
                        android:backgroundTint="@color/violet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter password"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout

                android:textColorHint="@color/violet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                app:passwordToggleTint="@color/violet"

                app:passwordToggleEnabled="true"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/repregpass"
                    android:textColor="@color/violet"
                    android:backgroundTint="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Repeat password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:id="@+id/signupbtn"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/violet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Sign Up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_marginBottom="25dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@color/violet"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/violet"
                    android:text="Or continue with"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@color/violet"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/facebookbtn"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp">
                <ImageView
                    android:padding="4dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:id="@+id/googlebtn"
                app:cardElevation="5dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp">
                <ImageView

                    android:padding="10dp"
                    android:src="@drawable/ic_google"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/forgotpasslayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_forgotpassword"></include>
        </LinearLayout>

</LinearLayout>
