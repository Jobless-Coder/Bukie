<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:foreground="@drawable/ripple_white"
    android:clickable="true"
    android:id="@+id/rellayoutfather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rellayoutson1"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_bubbles1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_margin="5dp"
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.krishna.bukie.StaticGridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview1"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"

                android:stretchMode="none"

                />


        </LinearLayout>


        <TextView

            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/ll1"
            android:layout_alignBottom="@+id/ll1"
            android:id="@+id/time1"
            android:textSize="8sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rellayoutson2"
        android:background="@drawable/chat_bubbles3"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:id="@+id/ll21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.krishna.bukie.StaticGridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview2"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"

                android:stretchMode="none"

                />

        </LinearLayout>


        <TextView
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_alignBottom="@id/ll21"
            android:layout_alignRight="@id/ll21"
            android:textColor="@color/white"
            android:id="@+id/time2"
            android:textSize="8sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>