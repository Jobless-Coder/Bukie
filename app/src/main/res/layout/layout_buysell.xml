<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/buy"
        android:orientation="vertical"
        android:foreground="@drawable/ripplebg"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent">
        <LinearLayout
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Buy"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/selector_chat1" />
                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/buynoti"
                    app:cardBackgroundColor="@color/red"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <TextView
                        android:id="@+id/buynotitxt"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:layout_gravity="center"
                        android:text="99+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>

        </LinearLayout>
        <View

            android:layout_gravity="bottom"
            android:background="@drawable/selector_chat1"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:layout_width="2dp"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:id="@+id/sell"
        android:orientation="vertical"
        android:foreground="@drawable/ripplebg"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent">
        <LinearLayout
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textColor="@color/selector_chat2"
                android:layout_marginLeft="15dp"
                android:text="Sell"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                android:id="@+id/sellnoti"
                app:cardBackgroundColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="20dp"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/sellnotitxt"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:layout_gravity="center"
                    android:text="99+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <View
            android:layout_gravity="bottom"
            android:background="@drawable/selector_chat2"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
    </LinearLayout>
</LinearLayout>
