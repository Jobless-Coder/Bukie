<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ReportActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:elevation="4dp"

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/BaseTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Why do you want to report this ad?"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Sexually explicit"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb2"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="This ad is misleading"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb3"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Hate speech/abusive"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb4"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Inappropriate/Spam content"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb5"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="or Other"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RadioGroup>
    <EditText

        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/additional"
        android:gravity="start"
        android:hint="Enter details"
        android:layout_margin="10dp"
        android:background="@drawable/border_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <android.support.v7.widget.CardView

        android:layout_width="100dp"
        app:cardElevation="5dp"
        android:id="@+id/reportbtn"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp">
        <TextView

            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="REPORT"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


</LinearLayout>