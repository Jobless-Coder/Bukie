<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.v7.widget.CardView
    android:id="@+id/chatlayout"

    android:foreground="@drawable/ripplebg"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"


    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.facebook.shimmer.ShimmerFrameLayout android:layout_height="fill_parent"
        android:id="@+id/shimmerlayout"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/adcard"
                    app:cardElevation="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/grey">

                    <ImageView
                        android:id="@+id/adpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:visibility="visible"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    app:layout_anchorGravity="bottom|end"
                    app:layout_anchor="@id/adcard"
                    android:id="@+id/ppcard"
                    app:cardBackgroundColor="@color/white"
                   android:layout_marginTop="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardElevation="0dp"
                    android:layout_alignBottom="@+id/adcard"
                    android:layout_alignEnd="@+id/adcard"
                    app:cardCornerRadius="20dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="30dp"
                        android:id="@+id/ppcard2"

                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey"

                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/profilepic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:scaleType="fitCenter" />
                    </android.support.v7.widget.CardView>
                </android.support.v7.widget.CardView>
            </android.support.design.widget.CoordinatorLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:maxLines="1"
                        android:minWidth="230dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:background="@color/grey"
                        android:minWidth="25dp"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:maxLines="1"
                        android:minWidth="200dp"
                        android:textSize="14dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:minWidth="10dp"
                        android:src="@drawable/ic_text_seen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->
                <!--<TextView-->
                    <!--android:minWidth="25dp"-->
                    <!--android:background="@color/grey"-->
                    <!--android:id="@+id/time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="14dp"-->
                    <!--android:textSize="12sp"-->
                    <!--android:visibility="visible" />-->

                <!--<ImageView-->
                    <!--android:tint="@color/black"-->
                    <!--android:src="@drawable/ic_text_seen"-->
                    <!--android:minWidth="10dp"-->
                    <!--android:id="@+id/status"-->
                    <!--android:layout_marginTop="0dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->



            <!--</LinearLayout>-->

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"></View>
    </LinearLayout>

</android.support.v7.widget.CardView>
    </LinearLayout>
