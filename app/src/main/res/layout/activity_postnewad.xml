<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:background="@color/white"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/BaseTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Post an Ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nsv"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Choose cover image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:onClick="addcoverimage"
            android:visibility="visible"
            android:id="@+id/addcoverimage"

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="20dp"


                app:cardCornerRadius="40dp"
                app:cardElevation="10dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                android:tint="@color/red"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/coverpicrl"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView


            android:id="@+id/coverpic"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"


            android:layout_width="wrap_content"
            android:layout_height="250dp" />
        <android.support.v7.widget.CardView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/deleteimg"
            android:onClick="deleteCoverImageView"
            app:cardElevation="4dp"
            app:cardCornerRadius="15dp"
            android:layout_alignEnd="@+id/coverpic"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView

                android:padding="1dp"
                android:tint="@color/red"
                android:src="@drawable/cross"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </android.support.v7.widget.CardView>
        </RelativeLayout>


        <TextView
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Choose other images (Maximum seven)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <HorizontalScrollView


        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/imgscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_margin="10dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/deep_red"
                android:text="Title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:backgroundTint="@color/deep_red"
                android:id="@+id/title"
                android:layout_weight="4"
                android:hint="Input title"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/deep_red"
                android:text="Category"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:backgroundTint="@color/deep_red"
                android:id="@+id/category"
                android:hint="Input Category"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/deep_red"
                android:text="Price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:backgroundTint="@color/deep_red"
                android:id="@+id/price"
                android:hint="Input Price"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>




</LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="right|bottom"
        app:elevation="10dp"

        app:rippleColor="@color/white"
        app:backgroundTint="@color/deep_blue"
        android:layout_marginRight="20dp"
        android:tint="@color/white"
        android:layout_marginBottom="50dp"
        android:id="@+id/fabpostad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"

        app:srcCompat="@drawable/tick1" />

</android.support.design.widget.CoordinatorLayout>
