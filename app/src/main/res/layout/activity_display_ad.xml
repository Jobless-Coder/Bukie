<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nsv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".DisplayAdActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
    <android.support.v7.widget.Toolbar
        android:background="#ffffff"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/BaseTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <RelativeLayout

            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.like.LikeButton
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:icon_type="star"
                app:icon_size="25dp"
                android:id="@+id/favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"


        android:layout_width="match_parent"
        android:layout_height="250dp">

    </android.support.v4.view.ViewPager>

                <LinearLayout

                    android:id="@+id/gotoleft"
                    android:background="@drawable/half_circle"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignEnd="@+id/viewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/ripple_halfcircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:tint="@color/white"

                        android:paddingLeft="4dp"
                        android:foregroundTint="@color/white"
                        android:src="@drawable/backsmall"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/gotoright"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:rotation="180"
                    android:background="@drawable/half_circle"
                    android:layout_alignStart="@+id/viewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/ripple_halfcircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="4dp"
                        android:tint="@color/white"
                        android:src="@drawable/backsmall"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@id/viewPager"
                app:piv_animationType="thinWorm"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="@color/deep_blue"
                app:piv_unselectedColor="@color/grey"
                app:piv_viewPager="@id/viewPager"
                app:piv_radius="8dp"


                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/deep_blue"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:text="Title :"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_marginLeft="30dp"


            android:id="@+id/title"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/deep_blue"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:text="Category:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/category"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"



            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/deep_blue"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:text="Price :"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"



            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/deep_blue"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:text="Date :"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        app:fabSize="normal"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:clickable="true"
        app:elevation="8dp"
        android:tint="@color/white"
        app:backgroundTint="@color/green"
        app:rippleColor="@android:color/background_light"
        app:srcCompat="@drawable/comments" />
</android.support.design.widget.CoordinatorLayout>